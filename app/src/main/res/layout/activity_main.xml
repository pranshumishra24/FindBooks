<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    tools:context="com.example.pranshumishra.findbooks.MainActivity">


    <EditText
        android:id="@+id/editText_bookname"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:padding="16dp"
        android:drawableLeft="@drawable/ic_search_icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="199dp"
        android:background="@drawable/rounded_edges"
        android:ems="10"
        android:imeOptions="actionSearch"
        android:selectAllOnFocus="true"
        android:inputType="textCapSentences"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="186dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/submitFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_bookname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_search_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_bookname"
        android:layout_alignStart="@+id/editText_bookname"
        android:layout_marginBottom="107dp"
        android:text="WELCOME"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_bookname"
        android:layout_alignTop="@+id/textView"
        android:layout_marginTop="49dp"
        android:text="Enter the book name"
        android:textSize="18sp" />


</RelativeLayout>
